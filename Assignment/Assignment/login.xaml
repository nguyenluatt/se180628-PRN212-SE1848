<Window x:Class="Assignment.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment"
        mc:Ignorable="d"
        Title="login" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Username/Phone:" />
            <TextBox Text="{Binding UserNameOrPhone}" />
            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="PasswordBox" />
            <Button Content="Login" Command="{Binding LoginCommand}" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>
